@{
    ViewBag.Title = "Tìm kiếm giảng viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="">
    <div class="row">
        <div class="col-lg-8">
            <h2 class="m-t-none">Tim kiếm người dùng</h2>
            <div id="custom-search-input">
                <div class="input-group col-lg-12">
                    <input type="text" class="form-control input-lg" id="txtKeySearch" placeholder="Tìm kiếm giảng viên ..." onkeypress="return EnterEventListContact(event, 'txtKeySearch', 'btnSearch', 'ajaxSearchListContact')" />
                    <span class="input-group-btn">
                        <button id="btnSearch" class="btn btn-info btn-lg" type="button" data-otf-target="#txtKeySearch" data-otf-updateid="#lellelele" data-otf-action="@Url.Action("LoadListBySearch", "TimKiemUser", null, Request.Url.Scheme)" onclick="ajaxSearchListContact('txtKeySearch', 'btnSearch');">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                    </span>
                </div>
            </div>
            <div id="lellelele">
                @if (ViewBag.CountResult != null && ViewBag.CountResult != "undefined")
                {
                    <div class="mb20">
                        <h3>Search Results</h3>
                        <h4 class="lead"><strong class="text-danger">@ViewBag.CountResult</strong> results were found for the search for <strong class="text-danger">@ViewBag.KeysSearch</strong></h4>
                    </div>
                }

                @Html.Partial("_PartialListResults")

            </div>
        </div>

        <div class="col-lg-4" id="danhsachtheodoi" data-otf-action="@Url.Action("GetListFollower", "TimKiemUser", null, Request.Url.Scheme)">
            @Html.Partial("_PartialDanhSachTheoDoi");
        </div>
    </div>

</div>

@section styles {
    <style>
        #custom-search-input {
            padding: 3px;
            border: solid 1px #E4E4E4;
            border-radius: 6px;
            background-color: #fff;
        }

            #custom-search-input input {
                border: 0;
                box-shadow: none;
            }

            #custom-search-input button {
                margin: 2px 0 0 0;
                background: none;
                box-shadow: none;
                border: 0;
                color: #666666;
                padding: 0 8px 0 10px;
                border-left: solid 1px #ccc;
            }

                #custom-search-input button:hover {
                    border: 0;
                    box-shadow: none;
                    border-left: solid 1px #ccc;
                }

            #custom-search-input .glyphicon-search {
                font-size: 23px;
            }
    </style>
}

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            loaddanhsachdangtheodoi('#danhsachtheodoi');
        });
    </script>
}

